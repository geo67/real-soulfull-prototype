/*------------------------------------------------------------------------//
	05b. .01 Carousel
//------------------------------------------------------------------------*/

#welcome-carousel-wrapper{
	width:610px;
	height: 422px;
	overflow: hidden;
}
.slide {
	border-radius: 5px;
	border: 1px dashed #999;
	padding: 20px 28px 22px 18px; 
}

.slide h1{
	font-size:24px;
	float:left;
	margin:0 0 14px 0;
}
.slide p{
	float:left;
	font-size:12px;
	color:#7b7b7b;
	clear:both;
}
.info-link {
	float:right;
	top:34px;
	left:-22px;
	position:relative;
	text-decoration:none;
}

.car-navigation {
    bottom: 64px;
    left: 149px;
    position: relative;
}

.car-navigation li {
    background: none repeat scroll 0 0 #FFFFFF;
    border: 1px solid #999999;
