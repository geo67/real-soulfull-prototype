#mask {
  position:absolute;
  left:0;
  top:0;
  z-index:9000;
  background-color:#999;
  display:none;
  opacity:0.5;
}

#box .window {
  position:fixed;
  left:20%;
  width:440px;
  height:200px;
  display:none;
  z-index:9999;
  padding:20px;
  box-shadow: 0 0 12px #333333;
}
.element-entry {
	padding-top:10px;
	overflow-y:scroll;
	height:115px;
}
.window h3{
  color: #0E76BC;
  font-size:24px;
  margin-top:10px;
  display:inline;
}
.element-entry textarea{
	border-radius:12px;
	border:1px solid #ccc;
	width:96%;
	margin-top:5px;
}

.share-entry{
	border-radius:12px;
	border:1px solid #ccc;
	padding:20px;
	margin-top:8px;
	margin-bottom:8px;
	width:90%;
}
.modal-icon {
	border:1px dashed #ccc;
	border-radius:12px;
	float:left;
	height:150px;
	width:150px;
	margin-right:10px;
}
#box #dialog {
  width:70%;
  height:auto;
  padding:10px;
  background-color:#ffffff;
  border-radius:8px;
  border:1px dashed #ccc;
}

.window .close{
    color: #0E76BC;
    float: right;
    font-size: 14px;
    font-weight: 600;
    margin-right: 2px;
}

.window .button {
	background-color: #0C77BD;
	border-radius:5px;
    float: right;
    margin: 6px 0 0;
    color:#fff;
    padding:2px;
}
.window .button input{
	background:transparent;
	border-radius:5px;
	border:none;
	color:#fff;
}
.window .button:hover {
	background-color:#ccc;
	border-radius:5px;
	border:none;
	color:#fff;
}
.divider-line{
	border:1px solid #ccc;
	margin-bottom:5px;
}

/* simple css-based tooltip */

.apop{
  display: none;
}


a.tpop:hover{
  border-width: 0; /* IE */
  background-color: #000;
  color:#336699;  
}

a.tpop:hover .apop {
  display: block;
  position: absolute;
  width: auto;
  font-size: 12px;
  color: #336699;
  z-index: 99;
  font-family: Verdana;
  background-color: #eeccaa;
  text-decoration:none;
}

.intp, .apop span {
  display: block;
  border: 0px solid; /*menu border*/
  border-color: #336699;
  float:inherit;
}

.intp {
  color: #AF10EE;
  z-index: 100;
  background-color: white;
}

