 /*------------------------------------------------------------------------//
	3. modals
//------------------------------------------------------------------------*/

 .forgot-pword{
    background-color: #FFFFFF;
    border: 1px solid #CCCCCC;
    border-radius: 5px 5px 5px 5px;
    display: block;
    float: left;
    height: auto;
    margin-bottom: 25%;
    margin-left: 8%;
    margin-top: 12%;
    padding: 15px;
    width: 84%;
 }

.forgot-pword h2{
	font-size:24px;
	font-weight:400;
	color:#0E76BD;
	margin-bottom:8px;
}

.forgot-pword span{
    color: #000000;
    display: block;
    font-size: 15px;
    margin-bottom:8px;
}

.forgot-pword input {
	width:100%;
	display:block;
}

.forgot-pword a {
  color: #0E76BD;
  float: left;
  font-size: 14px;
  margin-top: 8px;
  text-decoration: none;
}
.forgot-pword .button {
	background-color: #0C77BD;
	border-radius:5px;
    float: right;
    margin: 6px 0 0;
}

.forgot-pword .button:hover {
	background-color:#ccc;
	border-radius:5px;
	border:none;
}

.forgot-pword .button input{
	background:transparent;
	color:#fff;
	border-radius:5px;
	padding:3px;
	border:1px solid #ccc;
}