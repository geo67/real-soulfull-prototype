/*------------------------------------------------------------------------//
	01. Form Container
//------------------------------------------------------------------------*/


.form-cont{
	background-color: #fff;
	border:1px solid #bababa;
	border-radius:5px;
	padding:15px;
	float:left;
	width: 231px;
	margin:0 0 10px 0;
}

/*------------------------------------------------------------------------//
	2. Form Elements (button, input, checkboxes, etc)
//------------------------------------------------------------------------*/

.form-cont p {
	color: #0e76bd;
	font-size: 13px;
	font-weight: 600;
	font-family: arial;
	border-bottom:1px solid #C4C5C9;
	padding:0 0 12px 0;
	margin: 0 0 12px 0;
}

.form-cont input, .form-cont label {
	color:#c4c5c9;
}

.form-cont .cbox-wrapper {
	float:left;
}

.form-cont .checkbox-label{
	font-size: 10px;
}

.form-cont a {
	text-decoration:none;
	color:#a6d0e9;
	font-size: 10px

}
.form-cont .button {
	background-color: #0c77bd;
	float:right;
	margin:6px 0 0 0;
}

.form-cont .button:hover {
	background-color:#ccc;
}

.form-cont .button input{
	color:#fff;
	background-color: transparent;
	border: 1px solid #2f87c6;
	padding:3px;
}

.input{
    background: none repeat scroll 0 0 #FFFFFF;
    border: 1px solid #C4C5C9;
    border-radius: 3px 3px 3px 3px;
    box-shadow: 0 0 3px #C4C5C9 inset;
    clear: both;
    color: #C4C5C9;
    float: left;
    height: 20px;
    margin: 5px 0 5px 3px;
    padding: 0 0 0 3px;
    width: 224px;
}

.short-info-box {
	width: 150px;
}

/* Hack to remove Safari's extra padding. Remove if you don't care about pixel-perfection. */
@media screen and (-webkit-min-device-pixel-ratio:0) {
    .input input, .input textarea, .input select { padding: 4px; }
}


#form1, #form2 {
	display:none;
}
.drop-down-form1{
    background-color: #FFFFFF;
    border: 1px solid #BABABA;
    border-radius: 5px 5px 5px 5px;
    position: absolute;
    right: 35px;
    top: 86px;
    width: 186px;
}
.drop-down-form2 {
    background-color: #FFFFFF;
    border: 1px solid #BABABA;
    border-radius: 5px 5px 5px 5px;
    position: absolute;
    right: 15px;
    top: 86px;
    width: 186px;
}


 .drop-down-form2 input,
 .drop-down-form1 input{
 	width:95%;
 }

.drop-down-form2 .checkbox,
.drop-down-form1 .checkbox {
	display:inline-block;
	width:20px;
}


/*------------------------------------------------------------------------//
	3. modals
//------------------------------------------------------------------------*/

#overlay{
	position:fixed;
	top:0
	left:0;
	width:100%;
	height:100%;
	background:#000;
	opacity:0.5;
	filter: alpha(opacity=50);
}
#modal{
	border:1px solid #bababa;
    background-color: #FFFFFF;
    border-radius: 5px 5px 5px 5px;
    height: 40%;
    padding: 15px;
    position: absolute;
    width: 60%;
}
