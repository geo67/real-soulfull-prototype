/*------------------------------------------------------------------------//
	05d. Footer
//------------------------------------------------------------------------*/
.page-wrapper footer {
    clear: both;
    display: block;
    left: 25%;
    margin: 0 auto;
    position: absolute;
    top: 112%;
    width: 50%;
}

.page-wrapper footer > ul {
	list-style:none;
	width:500px;
	margin: 0 auto;
}

.page-wrapper footer > ul> li{
	float:left;
	color:#ccc;
	font-size:10px;
	text-transform:uppercase;
	margin:0 15px 0 0;
}

.page-wrapper footer > ul > li > a{
	color:#ccc;
	text-decoration:none;
}


