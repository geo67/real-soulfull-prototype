/*------------------------------------------------------------------------//
	05a.  Main Page
//------------------------------------------------------------------------*/
.page-wrapper {
	padding:0 0 25px 0;
}

.page-wrapper header{
	background-color:#0e76bc;
	color: #fff;
	font-size:28px;
	height: 30px;
	padding:27px 0 18px 53px;
}

header h1{
	display:inline-block;
	float:left;
}

.page-wrapper .container {
	padding:54px 85px 50px 54px;

}
.container .welcome {
	position: relative;
    z-index: 5;
}
.container h1{
    color: #fff;
    display: inline-block;
    font-size: 30px;

}
.container p {
	color:#fff;
}
#nav1 {
	position:relative;
	left:0;
	top:0;
}

#nav2, #nav3, #nav4, #nav5 {
    left: 54px;
    position: absolute;
    top: 191px;
}


/*------------------------------------------------------------------------//
	05b. .01 Slide Show See Blueberry CS
//------------------------------------------------------------------------*/

.page-wrapper .nav{
	float:left;
}

.page-wrapper .nav ul{
	width:35%;
}

.page-wrapper .nav li{
	float:left;
}
/*------------------------------------------------------------------------//
	05b. .02 Aside
//------------------------------------------------------------------------*/

aside {
    margin: 15px 0 0;
    position: absolute;
    right: 50px;
    top: 127px;
    width: 262px;
}

/*------------------------------------------------------------------------//
	05b. .04 Main Navigation
//------------------------------------------------------------------------*/

.main-nav{
    float: left;
    margin-left: 15%;
    margin-top: 15px;
    width: 50%;
}

.main-nav ul{
	color:#fff;
	text-transform:uppercase;
	text-align:left;
}

.main-nav li {
	float:left;
	font-size:14px;
	margin-right:40px;
}

.main-nav a{
	text-decoration:none;
	color:#fff;
}

.main-nav a:hover{
	color:#ccc;
}
/*------------------------------------------------------------------------//
	05b. .05 MVP Sections
//------------------------------------------------------------------------*/

.mvp-container{
    border: 1px dashed #CCCCCC;
    border-radius: 5px 5px 5px 5px;
    margin: 50px auto 0;
    padding: 22px 18px 0;
    width: 728px;
    height: 600px;
    overflow:hidden;
}

.mvp-container h1{
	font-size: 22px;
	margin:0 0 16px 0;
	color:#0E76BD;
}

.mvp-drawers {
    border: 1px dashed #CCCCCC;
    border-radius: 5px 5px 5px 5px;
    height: 100px;
    margin: 0 0 15px;
    padding: 10px 25px 25px;
    width: 670px;
}


.mvp-drawers p {
    border: 1px dashed #CCCCCC;
    border-radius: 5px 5px 5px 5px;
    float: right;
    height: 90px;
    margin-top: 5px;
    padding-left: 10px;
    padding-top: 10px;
    width: 504px;
    padding-bottom:10px;
}

.mvp-drawers h3 {
	font-size:18px;
	color:#0E76BD;
	margin:40px 0 0 25px;
	display:inline-block;
}

.mvp-nav {
    border: 1px solid #CCCCCC;
    border-radius: 5px 5px 5px 5px;
    height: 75px;
    margin: 0 0 15px;
    padding-top: 60px;
}

.mvp-nav li{
	float:left;
	margin:0 0 0 72px;
}

.mvp-nav a {
	text-decoration:none;
	color:#666;
}

.drawer-wrapper {
	height:500px;
	width:740px;
	overflow-y:scroll;
}


/*------------------------------------------------------------------------//
	05b. .06 Sub Nav (header)
//------------------------------------------------------------------------*/

.sub-nav{
	float:right;
	font-size:12px;
	margin-right:48px;
}

.sub-nav li{
	color:#fff;
	float:left;
	margin:8px 5px 0 0;
}

.sub-nav a{
	color:#fff;
	text-decoration:none;
}

/*------------------------------------------------------------------------//
	05b. .07 About us page
//------------------------------------------------------------------------*/

.footer-container {
	height:768px;
}

.container .return {
	color: #999999;
    display: block;
	font-size: 14px;
	margin-left: 43px;
}

.container .footer-nav {
	float:left;
	width: 30%;
	margin: 15px 0 0;
	margin-right:30px;
}

.container .footer-nav ul {
	padding:10px;
}

.container .footer-nav li{
	margin-bottom:10px;
	border-bottom:1px dashed #ccc;
	padding-bottom:10px;
}

.container .footer-nav a{
	text-decoration:none;
	color:#0E76BC;
}

.container .footer-info-wrapper {
	float:left;
	width:65%;

}

.container .footer-info-wrapper ul{
	overflow-y:scroll;
	height:600px;
}

.container .footer-info-wrapper h2{
	font-size:34px;
	color:#0E76BC;
	margin-bottom:12px;
}
.container .footer-info-wrapper p{
	color:#000;
	margin-bottom:12px;
}

/*------------------------------------------------------------------------//
	05b. .08 Columns
//------------------------------------------------------------------------*/

.container .col {
    border: 1px solid #CCCCCC;
    float: left;
    padding: 10px;
    width: 25%;
}

.container .main-col{
	width:70%;
	float:left;
	border:1px solid #ccc;
	margin-left:12px;
}

/*------------------------------------------------------------------------//
	05b. .09 Personal container
//------------------------------------------------------------------------*/

.personal-cont{
    border: 1px solid #CCCCCC;
    border-radius: 5px 5px 5px 5px;
    margin-bottom: 8px;
    padding: 10px;
    width: 90%;
}

.personal-cont h3{
	color:#0E76BC;
	font-size:25px;
}
.personal-cont p {
	color:#000;
}
