	display:block;
	margin:15px 0 0 0;
}

.page-wrapper footer > ul {
	list-style:none;
	width:500px;
	margin: 0 auto;
}

.page-wrapper footer > ul> li{
	float:left;
	color:#ccc;
	font-size:10px;
	text-transform:uppercase;
	margin:0 15px 0 0;
}

.page-wrapper footer > ul > li > a{
	color:#ccc;
	text-decoration:none;
}