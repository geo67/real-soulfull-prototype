/*------------------------------------------------------------------------//
	05a.  Main Page
//------------------------------------------------------------------------*/
.page-wrapper {
	padding:0 0 25px 0;
}

.page-wrapper header{
	background-color:#0e76bc;
	color: #fff;
	font-size:28px;
	height: 30px;
	padding:27px 0 18px 53px;
}

header h1{
	display:inline-block;
}

.page-wrapper .container {
	padding:54px 85px 50px 54px;
	width:1024px;
}

.container h1{
	font-size:30px;
}

#nav1 {
	position:relative;
	left:0;
	top:0;
}

#nav2, #nav3, #nav4, #nav5 {
    left: 54px;
    position: absolute;
    top: 191px;
}


/*------------------------------------------------------------------------//
	05b. .01 Slide Show
//------------------------------------------------------------------------*/

#slide-wrapper{
	width:610px;
	height: 422px;
	overflow: hidden;
	margin-top:15px;
}

.slide-animate {
	border-radius: 5px;
	border: 1px dashed #999;
	padding: 20px 28px 22px 18px; 
}

.slide-animate h1{
	font-size:24px;
	float:left;
	margin:0 0 14px 0;
}

.slide-animate p{
	float:left;
	font-size:12px;
	color:#7b7b7b;
	clear:both;
}

.info-link {
	float:right;
	top:-14px;
	left:-22px;
	position:relative;
	text-decoration:none;
}

.slide-navigation {
    bottom: 95px;
    left: 149px;
    position: relative;
}

.slide-navigation li {
    background: none repeat scroll 0 0 #FFFFFF;
    border: 1px solid #999999;
    border-radius:5px;
    float: left;
    height: 41px;
    margin-right: 6px;
    text-align: center;
    width: 51px;
    padding: 15px 6px 6px;
    font-size:11px;
}

.slide-navigation a{
	text-decoration:none;
}

#welcome-carousel {
	width:600px;
	float:left;
	margin-right:62px;
}

#slide-wrapper > ul{
	margin:0;
	padding:0;
	list-style:none;
	width:100000px;
}

#slide-wrapper > ul > li{
	width:562px;
	height:362px;
	float:left;
}

/*------------------------------------------------------------------------//
	05b. .02 Aside
//------------------------------------------------------------------------*/

aside {
	float:left;
	width: 262px;
	margin: 15px 0 0 0;
}


/*------------------------------------------------------------------------//
	05b. .03 Form Container
//------------------------------------------------------------------------*/


.form-cont{
	background-color: #fff;
	border:1px solid #bababa;
	border-radius:5px;
	padding:15px;
	float:left;
	width: 231px;
	margin:0 0 10px 0;
}

/*------------------------------------------------------------------------//
	05b. .04 Form Elements (button, input, checkboxes, etc)
//------------------------------------------------------------------------*/

.form-cont p {
	color: #0e76bd;
	font-size: 13px;
	font-weight: 600;
	font-family: arial;
	border-bottom:1px solid #C4C5C9;
	padding:0 0 12px 0;
	margin: 0 0 18px 0;
}

.form-cont input, .form-cont label {
	color:#c4c5c9;
}

.form-cont .cbox-wrapper {
	float:left;
}

.form-cont .checkbox-label{
	font-size: 10px;
}

.form-cont a {
	text-decoration:none;
	color:#a6d0e9;
	font-size: 10px

}
.form-cont .button {
	float:right;
	margin:6px 0 0 0;
}

.form-cont .button input{
	color:#fff;
	background-color: #0c77bd;
	border: 1px solid #2f87c6;
}

.input{
    background: none repeat scroll 0 0 #FFFFFF;
    border: 1px solid #C4C5C9;
    border-radius: 3px 3px 3px 3px;
    box-shadow: 0 0 3px #C4C5C9 inset;
    clear: both;
    color: #C4C5C9;
    float: left;
    height: 20px;
    margin: 5px 0 5px 3px;
    padding: 0 0 0 3px;
    width: 224px;
}

.short-info-box {
	width: 150px;
}

/* Hack to remove Safari's extra padding. Remove if you don't care about pixel-perfection. */
@media screen and (-webkit-min-device-pixel-ratio:0) {
    .input input, .input textarea, .input select { padding: 4px; }
}

/*------------------------------------------------------------------------//
	05b. .05 MVP Sections
//------------------------------------------------------------------------*/

.mvp-container{
    border: 1px dashed #CCCCCC;
    border-radius: 5px 5px 5px 5px;
    margin: 50px auto 0;
    padding: 22px 18px 0;
    width: 728px;
    height: 600px;
    overflow:hidden;
}

.mvp-container h1{
	font-size: 22px;
	margin:0 0 16px 0;
	color:#0E76BD;
}

.mvp-drawers {
    border: 1px dashed #CCCCCC;
    border-radius: 5px 5px 5px 5px;
    height: 100px;
    margin: 0 0 15px;
    padding: 10px 25px 25px;
    width: 670px;
}

.mvp-drawers p {
    border: 1px dashed #CCCCCC;
    border-radius: 5px 5px 5px 5px;
    float: right;
    height: 90px;
    margin-top: 5px;
    padding-left: 10px;
    padding-top: 10px;
    width: 504px;
}

.mvp-drawers h3 {
	font-size:18px;
	color:#0E76BD;
	margin:40px 0 0 25px;
	display:inline-block;
}

.mvp-nav {
    border: 1px solid #CCCCCC;
    border-radius: 5px 5px 5px 5px;
    height: 75px;
    margin: 0 0 15px;
    padding-top: 60px;
}

.mvp-nav li{
	float:left;
	margin:0 0 0 72px;
}

.mvp-nav a {
	text-decoration:none;
	color:#666;
}

.drawer-wrapper {
	height:500px;
	width:740px;
	overflow-y:scroll;
}



/*------------------------------------------------------------------------//
	05b. .06 Sub Nav (header)
