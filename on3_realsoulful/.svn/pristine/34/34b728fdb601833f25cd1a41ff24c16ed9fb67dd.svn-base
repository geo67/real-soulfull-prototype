.blueberry { margin: 0 auto; }
.blueberry .slides {
	display: block;
	position: absolute;
	overflow: hidden;
	width:100%;
	top:12px;
	left:0;
}
.blueberry .slides .benefits-info{
    color: white;
    display: inline-block;
    font-size: 30px;
    left: 55px;
    position: relative;
    top: 175px;
    z-index: 5;
}
.blueberry .slides .benefits-info h3{
	font-size:18px;
}
.blueberry .slides .benefits-info p {
	font-size:15px;
}
.blueberry .slides .benefits-info a{
    position: relative;
    text-decoration: none;
    top: 8px;
    color:#fff;
    font-size:12px;
}
.blueberry .slides li {
	position: absolute;
	top: 0;
	left: 0;
	overflow: hidden;
}
.blueberry .slides li img {
	display: block;
	width: 100%;
	max-width: none;
}
.blueberry .slides li.active { display: block; position: relative; }
.blueberry .crop li img { width: auto; }

.blueberry .pager {
    left: 24%;
    position: absolute;
    text-align: center;
    top:110%;
}
.blueberry .pager li { 
    color: #FFFFFF;
    display: inline;
    float: left;
    font-size: 11px;
    margin-right: 15px;
    padding: 15px;

}
.blueberry .pager li a,
.blueberry .pager li a span {
	display: block;

}
.blueberry .pager li a {
	color:#fff;
	text-decoration:none;
}
.blueberry .pager li a span {
	display:block;
}
.blueberry .pager li.active a span { background: #404040; }
