.menuWrapper, .menuwrapper2 {
  background:transparent;
}

.menuWrapper div {
  border: 1px solid #CCCCCC;
  height: auto;
  left: 110px;
  position: absolute;
  width: 300px;
  padding: 12px;
  border-radius: 5px;
  top: 120px;
}


.menuWrapper2 div button{
  background-color: #0C77BD;
  border-radius:5px;
    float: right;
    margin: 6px 0 0;
    color:#fff;
    padding:2px; 
    width:25px;
}

.menuWrapper div img {
    float: none;
    height: 160px;
    margin-left: 55px;
    margin-top: 5px;
    width: 160px;
}

.menuWrapper div h4, .menuWrapper2 div h4{
  text-align:left;
  color:#0E76BD;
  border-bottom:1px solid #ccc;
  padding-bottom:3px;
  margin-bottom:5px;
}

.menuWrapper span {
  display: block;
  float: right;
}

.menuWrapper span button{
  color:#fff;
  background-color: #0C77BD;
  border-radius:5px;
  padding:3px;
  margin-top:5px;
}
.menu1 {
  background:transparent;
}
.menu2 {
  background:#fff; 
  display:none;
  box-shadow:0 0 12px #ccc;
}

.menu3 {
  background:transparent;
}

.menu4, .menu6, .menu8 {
  background: none repeat scroll 0 0 #FFFFFF;
  display: none;
  left: 300px;
  position: absolute;
  z-index: 1001;
  width: 600px;
  height: auto;
  border-radius: 5px;
  border: 1px solid #ccc;
  padding: 20px;
  box-shadow:0 0 12px #ccc;
}

.menu4 img {
  border: 1px solid #CCCCCC;
  border-radius: 5px 5px 5px 5px;
  height: 100px;
  padding: 3px;
  text-indent: -9999px;
  width: 100px;
}

.menu4 select {
  border: 1px solid #CCCCCC;
  float: left;
  margin-bottom: 5px;
  padding: 3px;
  width: 60%;
}

.menu4 textarea {
  border: 1px solid #CCCCCC;
  border-radius: 5px 5px 5px 5px;
  height: 80px;
  width: 80%;
  margin-bottom:5px;
}

.share-entry{
  border-radius:12px;
  border:1px solid #ccc;
  padding:20px;
  margin-top:8px;
  margin-bottom:8px;
  width:93%;
}
.menu4 .close{
  color: #0E76BC;
  float: right;
  font-size: 14px;
  font-weight: 600;
  margin-right: 7px;
  margin-top: 5px;
}
.menu4 button {
  background-color: #0C77BD;
  border-radius: 5px 5px 5px 5px;
  color: #FFFFFF;
  float: right;
  padding: 3px;
  width: 70px;
}

 #mask {
  background-color: #999999;
  height: 5000px;
  left: 0;
  opacity: 0.5;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 1000;
  display:none;
}

.settings-tip {
  left: 460px;
  top: 350px;
  width: 212px;
}

.settings-tip .button {
  background-color: #0C77BD;
  border-radius: 5px 5px 5px 5px;
  color: #FFFFFF;
  float: right;
  padding: 3px;
  width: 70px;
  font-size:12px;
}

.settings-container .mid-size-tip{
