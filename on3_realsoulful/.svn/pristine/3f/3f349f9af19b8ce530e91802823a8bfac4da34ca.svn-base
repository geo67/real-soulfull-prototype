}
.settings-container .mid-size-tip a {
  float: right;
  margin-top: -30px;
}

.settings-tip.mid-size-tip p {
  color: #0C77BD;
  margin-bottom: 8px;
  margin-left: 0;
}

.settings-tip.mid-size-tip textarea {
  border: 2px solid #CCCCCC;
  height: 65px;
  margin-bottom: 8px;
  width: 96%;
}

.settings-tip.mid-size-tip button {
  background-color: #0C77BD;
  border: 1px solid #CCCCCC;
  border-radius: 5px 5px 5px 5px;
  color: #FFFFFF;
  float: right;
  padding: 3px;
  width: 75px;
}