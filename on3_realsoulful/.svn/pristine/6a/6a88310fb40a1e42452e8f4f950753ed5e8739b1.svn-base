/*------------------------------------------------------------------------//
	05a.  Main Menu
//------------------------------------------------------------------------*/

.page-wrapper header{
	background-color:#0e76bc;
	color: #fff;
	font-size:28px;
	height: 30px;
	padding:27px 0 18px 53px;
}

#welcome-carousel {
	width:600px;
	overflow: hidden;
}

#welcome-carousel > ul{
	margin:0;
	padding:0;
	list-style:none;
	width:100000px;
}

#welcome-carousel > ul > li{
	width:600px;
	float:left;
}

.form-cont{
	border:1px solid #999;
	border-radius:5px;
	padding:15px;
	float:left;
}
